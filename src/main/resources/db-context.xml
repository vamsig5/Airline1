<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	   
<bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
	<property name="url" value="jdbc:mysql://localhost:3306/system"></property>
	<property name="username" value="root"></property>
	<property name="password" value="vamsi"></property>
	<property name="driverClassName" value="com.mysql.jdbc.Driver"></property>
	
</bean>
<bean id="jdbcTemplet" class="org.springframework.jdbc.core.JdbcTemplate">
<property name="dataSource" ref="dataSource"></property>
</bean>

<bean id="CustomerDao" class="com.exilant.dao.CustomerDAO" autowire="byName">

<property name="dataSource" ref="dataSource"></property>
</bean>


</beans>